<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.matbrain.trainingapp.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/running_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:drawableLeft="@drawable/running_shoes"
                android:drawablePadding="16dp"
                android:layout_margin="16dp"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/running_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/running" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/jumping_rope_card_view"
        android:layout_below="@+id/running_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:drawableLeft="@drawable/jumping_rope"
                android:drawablePadding="16dp"
                android:layout_margin="16dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:id="@+id/jumping_rope_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jumping_rope" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dumbbdell_swings_card_view"
        android:layout_below="@+id/jumping_rope_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:drawableLeft="@drawable/dumbbell"
                android:drawablePadding="16dp"
                android:layout_margin="16dp"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:id="@+id/dumbbdell_swings_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dumbbells_swings" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
